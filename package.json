{
  "name": "@elizaos/plugin-clawhub",
  "version": "1.0.0",
  "description": "ClawHub skills integration for elizaOS - install and use OpenClaw skills",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "keywords": [
    "elizaos",
    "plugin",
    "clawhub",
    "openclaw",
    "skills",
    "agents"
  ],
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "tsup": "8.3.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "prettier --write ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "CLAWHUB_SKILLS_DIR": {
        "type": "string",
        "description": "Directory to install skills (default: ./skills)",
        "required": false,
        "example": "./skills"
      },
      "CLAWHUB_AUTO_LOAD": {
        "type": "boolean",
        "description": "Automatically load installed skills on startup",
        "required": false,
        "example": "true"
      }
    }
  }
}